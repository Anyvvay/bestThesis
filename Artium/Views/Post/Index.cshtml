@model List<Artium.Models.Objects.WallPost>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.login | Artium</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
          crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/98abbd269d.js" crossorigin="anonymous"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/css/navbar.css" rel="stylesheet" />
    <link href="~/css/user_page.css" rel="stylesheet" />
    <link href="~/css/UseProfile/wall_post.css" rel="stylesheet" />

    <script src="~/js/user_page.js"></script>

</head>
<body>
    <div class="topnav">
        <a href="#home"><img src="~/img/logo.png" class="nav_logo" alt="Alternate Text" /></a>
        <a href="#home">Home</a>
        <a href="#about">Subscriptions</a>
        <a href="#about">Profile</a>
        @if (!ViewBag.isAuth)
        {
            <a asp-action="Login" asp-controller="Account" style="float: right;">Sign In</a>
            <a asp-action="Register" asp-controller="Account" style="float: right;">Sign Up</a>
        }
        else
        {
        <form method="post" asp-controller="Account" asp-action="Logout" id="logout_form">
            <a href="javascript:{}" onclick="document.getElementById('logout_form').submit();
                                    return false;" style="float: right; padding: 14px 16px;">
                Log out
            </a>
        </form>
        }
        <div class="search-container">
            <form action="/action_page.php">
                <input type="text" placeholder="Search.." name="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </div>
    <div style="height: 50px; width: 100%;"> </div>
    <!-- header user background image -->
    <div class="head_canvas" style="background-image: url(@ViewBag.bguserpic)"></div>
    <!-- user profile -->
    <div class="profile">
        <div class="botnav">
            <div class="row main_info">
                <div class="col-1"></div>
                <div class="col-auto">
                    <div class="userpic" style="background-image: url(@ViewBag.userpic)"></div>
                </div>
                <div class="col">
                    <h1 class="user_name">@ViewBag.name</h1>
                    <h2 class="user_login">&#64;@ViewBag.login</h2>
                    <p>4021 followers</p>
                </div>
                @if (ViewBag.owner)
                {
                    <div class="col-auto">
                        <button class="btn btn-outline-dark" onclick="showProfileEditWindow()">Edit profile</button>
                    </div>
                }
                <div class="col-1"></div>
            </div>
            <div class="row description">
                <div class="col-1"></div>
                <div class="col">
                    <p>@ViewBag.description</p>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </div>
    <!-- User profile edit modal window -->
    <div id="profileEditWin" class="profileEditWin">
        <form asp-action="EditProfile" asp-controller="User" method="post" enctype="multipart/form-data" name="bg">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-auto">
                    <button class="btn btn-outline-dark" onclick="closeEditWindow()" type="button">Close</button>
                </div>
                <div class="col text-center"><h2>Edit profile</h2></div>
                <div class="col-auto">
                    <button class="btn btn-outline-dark" type="submit">Save</button>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="main">
                <div class="row">
                    <div class="col">
                        <label for="bgUserpic" class="edit_head_canvas" style="background-image: url(@ViewBag.bguserpic)"></label>
                        <input type="file" id="bgUserpic" name="bgUserpic" class="visually-hidden" />
                    </div>
                </div>
                <div class="row">
                    <div class="col"></div>
                    <div class="col-auto">
                        <label for="userpic" class="edit_userpic" style="background-image: url(@ViewBag.userpic)"></label>
                        <input type="file" id="userpic" name="userpic" class="visually-hidden" />
                    </div>
                    <div class="col"></div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col">
                        <h4>Name</h4>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col">
                        <input class="form-control" type="text" value="@ViewBag.name" name="name">
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col">
                        <h4>Description</h4>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col">
                        <textarea class="form-control" type="text" name="description">@ViewBag.description</textarea>
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>
        </form>
    </div>
    <!-- New post modal window -->
    <div id="newPostWin" class="newPostWin">
        <form asp-action="NewPost" asp-controller="User" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-auto">
                    <button class="btn btn-outline-dark" onclick="closeNewPostWin()" type="button">Close</button>
                </div>
                <div class="col"></div>
                <div class="col-auto">
                </div>
                <div class="col-1"></div>
            </div>
            <div class="main">
                <div class="row">
                    <div class="col-auto">
                        <div class="userpic" style="background-image: url(@ViewBag.userpic); height: 50px; width: 50px; border: 2px solid black"></div>
                    </div>
                    <div class="col">
                        <textarea class="form-control" type="text" name="text"></textarea>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col"></div>
                    <div class="col-auto"><button class="btn btn-outline-dark" type="submit">Save</button></div>
                    <div class="col-1"></div>
                </div>
            </div>
        </form>
    </div>
    <!-- content -->
    <div class="wall">
        <div class="row">
            <div class="col-1"></div>
            <div class="col">
                <div class="wall_nav">
                    <div class="new_post_button">
                        <button class="btn btn-outline-secondary btn-sm" onclick="newPostWindow()"><i class="fas fa-pen"></i> Post</button>
                    </div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-1"></div>
                <div class="col">
                    @foreach (var post in @ViewBag.WallPosts)
                    {
                        <div class="post">
                            <div class="row">
                                <div class="col-auto author_login">
                                    <a href="/@post.GetUserLogin()">&#64;@post.GetUserLogin()</a>
                                </div>
                                <div class="col-auto">
                                    <p>@post.Date</p>
                                </div>
                                <div class="col"></div>
                                @if (ViewBag.userId == post.UserId)
                                {
                                    <div class="col-auto">
                                        <form asp-action="DeletePost" asp-controller="User" method="post">
                                            <input type="number" name="id" value="@post.Id" hidden />
                                            <button class="btn btn-outline-secondary  btn-sm">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p>@post.Text</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-auto">
                                    <button class="btn btn-outline-success btn-sm"><i class="fas fa-heart"></i></button> 138
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-outline-danger btn-sm"><i class="fas fa-heart-broken"></i></button> 23
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-outline-secondary btn-sm" onclick="goToPost(@post.Id)"><i class="fas fa-comment"></i></button> 14
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-3">
                    <div class="post">
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                        <p>User <button class="btn btn-outline-dark">FOLLOW</button></p>
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </div>
</body>
</html>